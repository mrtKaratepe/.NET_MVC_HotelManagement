<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="@Url.Content("~/Content/five_star_hotel/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/five_star_hotel/layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/five_star_hotel/script.js")" type="text/javascript">
    </script>
    
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/five_star_hotel/style.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="main">
        <!-- header -->
        <div id="header" class="small">
            <div class="row-1">
                <div class="wrapper">
                    <div class="logo">
                        <h1>@Html.ActionLink("Five Star", "Index", "Home")</h1>
                        <em>Hotel</em> <strong>True Luxury</strong>
                    </div>
                    <div class="phones">
                        1-800-412-45-56<br />
                        1-800-542-64-48
                    </div>
                </div>
            </div>
            <div class="row-2 alt">
                <div class="indent">
                    <!-- header-box-small begin -->
                    <div class="header-box-small">
                        <div class="inner">
                            <ul class="nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Offers", "Offers", "Home")</li>
                                <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                                <li>@Html.ActionLink("Restaurant", "Restaurant", "Home")</li>
                                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                                <li>@Html.ActionLink("Booking", "Index", "Booking")</li>
                            </ul>
                        </div>
                    </div>
                    <!-- header-box-small end -->
                </div>
            </div>
        </div>
        <!-- content -->
        <div id="content">
            @RenderBody()

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
            <!-- footer -->
            <div id="footer">
                <ul class="nav"></ul>
                <div class="wrapper">
                    <div class="fleft">Copyright &copy; 2015 <a href="http://www.muratkaratepe.com/">Murat KARATEPE</a>. All Rights Reserved</div>
                    <div class="fright">Designed by <a href="http://www.muratkaratepe.com/">Our Web Site</a> provider</div>
                </div>
            </div>
</body>
</html>
