@model HotelManagement.Booking

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.BookingId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "User Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <strong>@User.Identity.Name</strong><br /><br />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost)
                @Html.ValidationMessageFor(model => model.Cost)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InDate)
                @Html.ValidationMessageFor(model => model.InDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OutDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OutDate)
                @Html.ValidationMessageFor(model => model.OutDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerCount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerCount)
                @Html.ValidationMessageFor(model => model.CustomerCount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelId, "Hotel Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("HotelId", String.Empty)
                @Html.ValidationMessageFor(model => model.HotelId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoomId, "Room Number", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoomId", String.Empty)
                @Html.ValidationMessageFor(model => model.RoomId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
